{
  "manifest_version": 3,
  "name": "Gemini Hands-Free Bridge",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "sync-code": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Sync Code to Local"
    }
  }
}